{
  "tabWidth": 2,
  "endOfLine": "lf",
  "useTabs": false,
  "singleQuote": true,
  "semi": true,
  "bracketSpacing": true,
  "arrowParens": "avoid",
  "trailingComma": "es5",
  "printWidth": 80,
  "overrides": [
    {
      "files": "**/*.ts",
      "options": {
        "printWidth": 80
      }
    },
    {
      "files": "**/*.html",
      "options": {
        "printWidth": 120
      }
    }
  ]
}
